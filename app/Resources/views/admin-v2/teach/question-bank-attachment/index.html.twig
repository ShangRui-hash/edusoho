{% extends 'admin-v2/teach/cloud-file/layout.html.twig' %}

{% set menu = 'admin_v2_question_bank_attachment'%}
{% do load_script('cloudfile/manage') %}

{% block stylesheets %}
  {{parent()}}
  <style>
  .batch-item {
      position: absolute;
      left: 6px;
      top: 3px;
      z-index: 101;
  }
</style>
{% endblock %}

{% block main %}
<div class="eduyun-main">
  <form class="form-inline es-materials-manage" id="materials-form">
    {% include 'admin-v2/teach/cloud-attachment/form/nav.html.twig' %}
    {% include 'admin-v2/teach/cloud-attachment/form/filter.html.twig' %}
    <div class="material-btn-group mbm all mtm">
      <button class="btn btn-danger js-batch-delete-btn" type="button" disabled data-role="batch-dalete" data-url="{{ path('admin_v2_cloud_question_file_delete_modal_show') }}" >{{ 'site.delete'|trans }}</button>
    </div>
    {% include 'admin-v2/teach/cloud-file/resource-table.html.twig' with {'pageType': 'attachment'} %}
    <input type="hidden">
    <input type="hidden" name="questionBank" value="1">
    <input type="hidden" name="resType" value="attachment">
  </form>
</div>
{% endblock %}