<div class="js-tasks-list">
    {% if optionalTaskCount|default(0) %}
        <div class="mbs">
            <input type="checkbox" name="showOptional" id="showOptional"><label for="showOptional">{{ 'task.show_optional_tips'|trans }}</label>
        </div>
    {% endif %}
    {% if course.taskDisplay %}
        <div class="js-tasks-show" data-url="{{ path('course_task_list_render', {courseId:course.id, type:course.courseType,paged:paged|default(false),previewAs:app.request.query.get('previewAs')}) }}"></div>
    {% else %}
        <div class="goods-empty-content">
          <img src="/static-dist/app/img/vue/goods/empty-content.png" alt="">
          <p>{{ 'task.show_empty_content' | trans }}</p>
        </div>
    {% endif %}
</div>

{% do script(['app/js/courseset/show/tasks/index.js']) %}
